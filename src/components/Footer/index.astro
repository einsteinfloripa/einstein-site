];

const currentYear = new Date().getFullYear();
---

<div class='flex flex-col bg-white items-center justify-center'>
  <ul class='flex gap-5'>
    {
      footerOptions.map(({ href, label }) => (
        <li>
          <a href={href}>{label}</a>
        </li>
      ))
    }
  </ul>
  <ul class='flex gap-5'>
    {
      contacts.map(({ href, label, icon }) => (
        <li>
          <a href={href}>
            <i class={icon} />
            {label}
          </a>
        </li>
      ))
    }
  </ul>
