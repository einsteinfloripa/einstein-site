type Contact = {
  label: string;
  href: string;
  icon: string;
};
const contacts: Contact[] = [
  {
    label: "Instagram",
    href: "https://www.instagram.com/einsteinjr/",
    icon: "fab fa-instagram",
  },
  {
    label: "Facebook",
    href: "https://www.facebook.com/einsteinjr",
